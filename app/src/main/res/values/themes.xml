<resources>
    <!-- Base application theme using Material 3 -->
    <style name="Theme.Randora" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error color -->
        <item name="colorError">@color/teal_700</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Material 3 component styles -->
        <item name="buttonStyle">@style/Widget.Material3.Button</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Material3.BodyLarge</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar.Primary</item>

        <!-- ListView相关属性，防止inflate时出错 -->
        <item name="android:listDivider">@android:drawable/divider_horizontal_bright</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Define the missing Toolbar style -->
    <style name="Widget.Material3.Toolbar.Primary" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
</resources>
